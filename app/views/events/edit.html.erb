					<li class="nav-item">
							<% if current_user %>
									<%= link_to 'Sign Out', destroy_user_session_path, method: :delete,  :style => "color:white; font-size: 7px;",  :class =>"btn orange btn-sm" %>
							<% end %>
					</li>
				</ul>
			</div>
		</nav>
    <div class="container-fluid events-confirmed">

    <h1 class="h1-events">Confirm your Event</h1>
