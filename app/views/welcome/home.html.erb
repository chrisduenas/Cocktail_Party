


<body>
	<!--Main Navigation-->
	<header>
		<nav class="navbar navbar-expand-lg black fixed-top scrolling-navbar">
      		<div class="container">
        		<img src="/assets/side-view-logo.png" width="50%", alt="logo" >
      		</div>
          		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#basicExampleNav" aria-controls="basicExampleNav"
            			aria-expanded="false" aria-label="Toggle navigation">
                		<span class="navbar-toggler-icon dark-amber-text"></span>
          		</button>
			<div class="collapse navbar-collapse" id="basicExampleNav">
				<ul class="navbar-nav mr-auto links-in-nav">
					<li class="nav-item">
							<% if current_user %>
								<button class= "btn orange btn-sm" type="button" style="margin-left:450px;">
									<%= link_to 'Sign Out', destroy_user_session_path, method: :delete,  :style => "color:white; font-size: 7px;" %>
								</button>
							<% end %>
					</li>
				</ul>
			</div>
		</nav>
			<div class="container d-flex align-items-center justify-content-center h-100">
				<div>
						<video id="bgvid" playsinline autoplay muted loop><source src="bartender.mp4" type="video/mp4"></video>
				</div>
				<div class="row d-flex justify-content-center text-center">
						<div class="col-md-10">
								<!-- Heading -->
								<h2 class="h2-home" class="display-10 font-weight-bold white-text pt-5 mb-2">Hire A Bartender</h2>

								<!-- Divider -->
								<hr class="hr-light">

								<!-- Description -->
								<h4 class="h4-home"class="white-text my-4"> Start here by searching through our list of talented bartenders</h4>
								<% if current_user %>
										<%= link_to '<button id="search-btn" type="button" >SEARCH</button>'.html_safe, welcome_search_path %>
								<% else %>
								<%= link_to '<button id="sign-in-btn" type="button" >SIGN IN</button>'.html_safe, user_session_path %>
								<% end %> 
						</div>
				</div>
			</div>
	</header>

	<!--========== Features ==========--> 

	<section class="features">
		<div class="features-overlay">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
									
									<!-- indicators -->
									<ol class="carousel-indicators">
										<li data-target="#carousel-features" data-slide-to="0" class="active"></li>
										<li data-target="#carousel-features" data-slide-to="1"></li>
										<li data-target="#carousel-features" data-slide-to="2"></li>
									</ol>

									<!-- wrapper for slides -->
									<div class="carousel-inner">

										<!-- item 01 -->
										<div class="carousel-item text-center active">
											<img class="d-block w-20" src="/assets/miami.jpg" alt="features" class="center-block">
											<div class="features-caption">
												<h2>Community</h2>
												<h4>
												<p>We are community based and focus on bringing professionals in your area</p>
											</div>
										</div>

										<!-- item 02 -->
										<div class="carousel-item text-center">
											<img class="d-block w-20" src="/assets/bartender.jpg" alt="features" class="center-block">
											<div class="features-caption">
												<h2>Book Bartenders</h2>
												<h4>
												<p>You have more control on who you want to book. Our bartenders are chosen from a peer-to-peer user rating scale.
												</p>
											</div>
										</div>

										<!-- item 03 -->
										<div class="carousel-item text-center">
											<img class="d-block w-20" src="/assets/cheers.jpg" alt="features" class="center-block">
											<div class="features-caption">
												<h2>Find Events</h2>
												<h4>
												<p>As a bartender looking to book events, you donâ€™t need to be fancy to make drinks as long as you have a excellent
													presentation and a pleasing personality.</p>
											</div>
										</div>
									</div>
									<a class="carousel-control-prev" href="#carousel-features" role="button" data-slide="prev">
										<span class="carousel-control-prev-icon" aria-hidden="true"></span>
										<span class="sr-only">Previous</span>
									</a>
									<a class="carousel-control-next" href="#carousel-features" role="button" data-slide="next">
										<span class="carousel-control-next-icon" aria-hidden="true"></span>
										<span class="sr-only">Next</span>
									</a>
						</div>
					</div>
				</div>
			</div>
		</div>

	</section>

</body>


